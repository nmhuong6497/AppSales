<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".coffee.CoffeeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_view_title_1"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            tools:text="Cà phê phin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_view_1"
            android:scaleType="fitXY"
            tools:src="@drawable/cf_phin"
            app:layout_constraintTop_toBottomOf="@id/text_view_title_1"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/text_view_content_1"
            tools:text="Việt Nam tự hào sở hữu một di sản văn hóa cà phê giàu có, và 'Phin' chính là linh hồn, là nét văn hóa thưởng thức cà phê đã ăn sâu vào tiềm thức biết bao người Việt."
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/image_view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_1"
            android:textColor="#f20"
            android:text="Xem sản phẩm"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_content_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        ------

        <TextView
            android:id="@+id/text_view_title_2"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="50dp"
            tools:text="Cà phê phin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/image_view_2"
            android:scaleType="fitXY"
            tools:src="@drawable/cf_phin"
            app:layout_constraintTop_toBottomOf="@id/text_view_title_2"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_view_content_2"
            tools:text="Việt Nam tự hào sở hữu một di sản văn hóa cà phê giàu có, và 'Phin' chính là linh hồn, là nét văn hóa thưởng thức cà phê đã ăn sâu vào tiềm thức biết bao người Việt."
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/image_view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_2"
            android:textColor="#f20"
            android:text="Xem sản phẩm"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_content_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        ------

        <TextView
            android:id="@+id/text_view_title_3"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="50dp"
            tools:text="Cà phê phin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/image_view_3"
            android:scaleType="fitXY"
            tools:src="@drawable/cf_phin"
            app:layout_constraintTop_toBottomOf="@id/text_view_title_3"
